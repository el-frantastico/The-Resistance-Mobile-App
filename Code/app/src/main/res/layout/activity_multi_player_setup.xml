<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MultiPlayerSetup"
    android:background="@drawable/background">

    <TextView android:text="CREATE LOBBY"
        android:id="@+id/create_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/main_title_font_size"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/join_lobby"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="onCreateLobbyClick"
        android:clickable="true"/>

    <TextView android:text="JOIN LOBBY"
        android:id="@+id/join_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/main_title_font_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="223dp" />
</RelativeLayout>
